[environment]
; Установите значение false, если вы хотите, чтобы конфигурация погоды определяла движение солнца.
dynamic_sun_dir = true

; Определяет направление движения солнца
; Бесполезно, если dynamic_sun_dir отключен
sun_dir_azimuth = 0.0

[gameplay]
; Вы можете настроить поведение камеры при смерти актера.
; Допустимые значения: firsteye, freelook, fixedlook
; Обратите внимание, что игрок может включить firsteye самостоятельно.
; если вы установите freelook или fixedlook
actor_death_camera = freelook

[compatibility]
; Совместимость с предыдущими играми
; cop, cs, shoc или soc и разблокировать
; разблокировка cop с отключенными ограничениями
game_mode = cs
